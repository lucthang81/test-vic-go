<html>
  <head>
    {{template "header_link_script" .}}
  </head>
  <body style="margin: 20px;">
    {{template "nav" .}}
    <div class="row">
      <div class="col-md-4">
        <form action="/admin/admin_account/change_password" method="POST">
          <div class="form-group">
            <label>Old password</label>
            <input type="password" name="old_password" class="form-control" placeholder="Old password" aria-describedby="basic-addon1">
          </div>

          <div class="form-group">
            <label>Old password (for action)</label>
            <input type="password" name="old_password_action" class="form-control" placeholder="Old password (for action)" aria-describedby="basic-addon1">
          </div>

          <hr>
          <div class="form-group">
            <label for="password">Password</label>
            <input type="password" name="password" class="form-control" placeholder="Password" />
          </div>
          <div class="form-group">
            <label for="password">Confirm Password</label>
            <input type="password" name="confirm_password" class="form-control" placeholder="Confirm password" />
          </div>
          <hr>
          <div class="form-group">
            <label for="password">Password (for action)</label>
            <input type="password" name="password_action" class="form-control" placeholder="Password (for action)" />
          </div>
          <div class="form-group">
            <label for="password">Confirm Password (for action)</label>
            <input type="password" name="confirm_password_action" class="form-control" placeholder="Confirm password (for action)" />
          </div>
          <div class="form-group">
            <input type="submit" value="submit" class="btn btn-info"/>
          </div>
        </form>
      </div>
    </div>
  </body>
</html>