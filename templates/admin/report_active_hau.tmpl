<html>
	<head>
		{{template "header_link_script" .}}
	    <script type="text/javascript" src="https://www.google.com/jsapi"></script>
	    <script type="text/javascript">
			$(document).ready(function(){
				$( "#date" ).datepicker({
				dateFormat: "dd-mm-yy"
				});
				

			});
			// Load the Visualization API and the piechart package.
		      google.load('visualization', '1.0', {'packages':['corechart']});

		      // Set a callback to run when the Google Visualization API is loaded.
		      google.setOnLoadCallback(drawChart);

		      // Callback that creates and populates a data table,
		      // instantiates the pie chart, passes in the data and
		      // draws it.
		      function drawChart() {

		        // Create the data table.
		        var data = google.visualization.arrayToDataTable([
		          ['Date', 'Active count'],
				{{ range $index, $element := .results }}
				['{{$element.date}}', {{$element.count}}],
				{{ end }}
		        ]);


		        // Set chart options
		        var options = {'title':'{{.page_title}}',
		                       'width':1400,
		                       'height':600,
			                   legend: { position: 'bottom' }};

		        // Instantiate and draw our chart, passing in some options.
		        var chart = new google.visualization.LineChart(document.getElementById('chart_div'));
		        chart.draw(data, options);
		      }
		</script>
	</head>
	<body style="margin: 20px;">
		{{template "nav" .}}
		<div class="row">
			<div class="col-md-4">
				<form action="/admin/report/active/hau" method="GET" class="pure-form" enctype="multipart/form-data">
					<div class="form-group">
						<label for="date">Date (Vietnamese time)</label>
						<input type="text" id="date" name="date" class="form-control" placeholder="Date" value="{{.date}}" />
					</div>
					<input type="submit" value="Refresh" class="btn btn-primary"/>
				</form>
			</div>
		</div>

			<table class="table">
				<tr>
					<td>Date</td>
					{{ range $index, $element := .results }}
					<td>{{$element.date}}</td>
					{{ end }}
				</tr>
				<tr>
					<td>Active count</td>
					{{ range $index, $element := .results }}
					<td>{{$element.count}}</td>
					{{ end }}
				</tr>
			</table>
		    <div id="chart_div"></div>
		</body>
</html>